{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/fonts/*.ttf",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/fonts/**",
        "destination": "/fonts/DS-DIGIB.ttf"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
